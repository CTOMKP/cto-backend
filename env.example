PORT=3001
# Helius Mainnet API Key - provides comprehensive Solana mainnet data
HELIUS_API_KEY=helius_api_key
SOLSCAN_API_KEY=your_solscan_api_key_here
NODE_ENV=development
# Network: mainnet (for production-ready token analysis)

# CORS Configuration - comma-separated list of allowed origins
# Development: http://localhost:3000,http://localhost:5173
# Production: https://ctomemes.xyz,https://your-frontend-domain.vercel.app
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Backend API Configuration
BACKEND_BASE_URL=http://localhost:3001
# Production: https://your-backend-domain.com

# AWS S3 Configuration for Image Storage (REQUIRED)
AWS_REGION=eu-north-1
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# Optional: CDN/CloudFront base URL for faster image delivery
ASSETS_CDN_BASE=https://your-cloudfront-domain.com

# Image Cache Configuration (in seconds)
# Development: 30-60 seconds (frequent updates)
# Production: 300-900 seconds (5-15 minutes, better for scaling)
IMAGE_CACHE_TTL=300

# Redis Configuration for Distributed Caching
# Uses the same host as Contabo VPS
REDIS_PORT=6379
REDIS_PASSWORD=  # Leave empty if no password set
REDIS_DB=0  # Default database (0-15)

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Authentication
ADMIN_EMAIL=admin@ctomemes.xyz
ADMIN_PASSWORD=your-hashed-admin-password-here