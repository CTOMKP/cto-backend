PORT=3001
# Helius Mainnet API Key - provides comprehensive Solana mainnet data
HELIUS_API_KEY=helius_api_key
SOLSCAN_API_KEY=your_solscan_api_key_here
NODE_ENV=development
# Network: mainnet (for production-ready token analysis)

# CORS Configuration - comma-separated list of allowed origins
# Development: http://localhost:3000,http://localhost:5173
# Production: https://ctomemes.xyz,https://your-frontend-domain.vercel.app
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Contabo VPS Configuration for Image Storage
CONTABO_HOST=your_contabo_vps_ip
CONTABO_PORT=22
CONTABO_USERNAME=your_username
CONTABO_PASSWORD=your_password
# Alternative: use private key authentication
# CONTABO_PRIVATE_KEY_PATH=/path/to/private/key
CONTABO_IMAGE_PATH=/var/www/html/images
CONTABO_BASE_URL=https://your-domain.com/images

# Image Cache Configuration (in seconds)
# Development: 30-60 seconds (frequent updates)
# Production: 300-900 seconds (5-15 minutes, better for scaling)
IMAGE_CACHE_TTL=300
IMAGE_KEEP_ALIVE_INTERVAL=180

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Authentication
ADMIN_EMAIL=admin@ctomemes.xyz
ADMIN_PASSWORD=your-hashed-admin-password-here